package Encapsulamento;

public class Encapsulada {

	private int codigo;
	private String nome;
	private double preco;
	private double desconto_a_vista;
	
	public Encapsulada(int codigo, String nome, double preco, double desconto_a_vista) {
		this.codigo = codigo;
		this.nome = nome;
		this.preco = preco;
		this.desconto_a_vista = desconto_a_vista;
	}

	public int getCodigo() {
		return codigo;
	}

	public void setCodigo(int codigo) {
		this.codigo = codigo;
	}

	public String getNome() {
		return nome;
	}

	public void setNome(String nome) {
		this.nome = nome;
	}

	public double getPreco() {
		return preco;
	}

	public void setPreco(double preco) {
		this.preco = preco;
	}

	public double getDesconto_a_vista() {
		return desconto_a_vista;
	}

	public void setDesconto_a_vista(double desconto_a_vista) {
		this.desconto_a_vista = desconto_a_vista;
	}
	
	
	public double calcAvista(double preco){
		
		System.out.println("paguei a vista");
		
		return preco;
		
		
	}
	
	public void Setdesconto(double desconto_a_vista){
		
		this.desconto_a_vista = this.getDesconto_a_vista();
		
		
		 System.out.println(this.desconto_a_vista);
		 System.out.println(this.getPreco());
		 System.out.println(this.getPreco()- this.desconto_a_vista);
		 
		
		
	}
	

	
}
